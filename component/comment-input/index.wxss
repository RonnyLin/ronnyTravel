.pannal{
  position: fixed;
  bottom:0;
  width: 100%;
}

.replay_comment{
  display: flex;
  width: 100%;
  background: #fff;
  font-size: 28rpx;
  color: #e5e5e5;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
}

.replay_comment .avatar{
  padding: 10rpx;
  margin-left: 30rpx;
}

.replay_comment .avatar image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.comment_input{
  width: 100%;
  height: 60rpx;

  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 20rpx 0rpx;
  border-top: 1rpx solid #e5e5e5;
  margin: 0;
}

.comment_input .input {
  padding-left: 40rpx;
  flex-grow:2;
}
.comment_input .focus{
  padding-left: 40rpx;
  flex-grow:2;
}
.comment_input .focus input{
  position: relative;
  top:-10rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
}
.comment_input .publish{
  font-size: 32rpx;
  color: #e5e5e5;
  padding: 10rpx 20rpx 0rpx;
}

.comment_operator{
  display: flex;
  min-width: 250rpx;
  padding-right: 30rpx;
}

.comment_operator view{
  margin: 0rpx 30rpx;
}

.comment_input input{
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #F7F7F7;
  border-radius: 60rpx;
  background: #F1F1F1;
  font-size: 24rpx;
  padding-left: 16rpx;
}

.comment_input view image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 15rpx;
}
