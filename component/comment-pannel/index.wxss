.comment_pannel{
  margin-top: 10px;
  background: #fff;
}
.album{
  background: #fff;
  padding: 20px 15px;
}


.comment_list{
  display: flex;
  padding:20rpx 20rpx 0 20rpx;
}
.comment_area .comment_list .avatar{
  min-width:120rpx;
}

.comment_area .comment_list .avatar image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left:25%;
}

.comment{
  display: flex;
  flex-direction: column;
  width:100%;
  border-bottom: 1rpx solid rgba(200,200,200,.3);
}

.comment .comment_name{
  font-size: 28rpx;
  padding: 20rpx 0rpx;
}
.comment .comment_name i {
  font-size: 18rpx;
  color: #b5b5b5;
}

.comment .comment_ancestor{
  background:#f5f5f5;
  border-radius: 10rpx;
  font-size:22rpx;
  padding:15rpx;
  color:#b5b5b5;
}
.comment .comment_content{
  font-size: 28rpx;
  color: #222;
  padding:10rpx 0;
}
.comment .comment_like{
  padding-bottom: 20rpx;
}
.comment .comment_like image{
  width: 32rpx;
  height:32rpx;
}
.comment .comment_like i {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #bfbfbf;
  position: relative;
  top:-10rpx;
}

.comment_area .replay_title{
  font-size:28rpx;
  color:#b2b2b2;
  padding-left:50rpx;
  border-bottom:1rpx solid rgba(200,200,200,.3);
  width:100%;
  display:block;
  height:80rpx;
  line-height:80rpx;

}

.blank{
  width: 100%;
  height: 300px;
  background:#f5f5f5;
  padding: 50px 0;
  text-align: center;
  font-size:28rpx;
}

.like_list{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  align-content: center;
  height: 80rpx;
  line-height: 80rpx;
  padding:10rpx 40rpx;
  font-size:28rpx;
}

.like_list image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 50%;
  border-radius: 50%;
  margin-right: 20rpx;
}

.like_list view:last-child{
  margin-left: 20rpx;
  font-size: 18rpx;
  color: #a5a5a5;
}