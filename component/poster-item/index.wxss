.article{
  padding: 20rpx 40rpx;
  background: #fff;
  margin-top:20rpx;
}
.article:active{
  background: #f4f4f4;
}
.article .author,.article .content{
  color: #999;
  font-size:28rpx;
  padding:10rpx 0;
}

.article .post image{
  width:100%;
}
.article .bottom{
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #999;
  font-size:24rpx;
  padding:10rpx 0;
}
.article .bottom image{
  width: 45rpx;
  height: 45rpx;
}
.bottom .bottom_select{
  display: flex;
  width: 110rpx;
  justify-content: space-between;
}