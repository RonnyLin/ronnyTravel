.wux-tabs {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  box-sizing: border-box;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background: #fff;
  border-bottom:1rpx solid rgba(200,200,200,.3);
}
.wux-tabs--scroll {
  display: block;
  overflow-x: auto;
  white-space: nowrap;
}
