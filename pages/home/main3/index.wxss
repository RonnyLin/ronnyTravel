}

.page__bd{
  padding-bottom: 0;
}

.weui-tab__content{
  padding-top: 60px;
  text-align: center;
}

.popup__button {
  display: block;
  flex: 1;
  color: #33cd5f;
  position: relative;
}

.botton_edit{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 60rpx;
  right: 20rpx;
  border-radius: 50%;
